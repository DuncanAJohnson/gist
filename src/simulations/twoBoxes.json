{
  "title": "Two Boxes Collision",
  "description": "Adjust the velocities to see the boxes move and collide",
  "environment": {
    "walls": ["left", "right", "bottom"],
    "gravity": 9.8,
    "unit": "m",
    "pixelsPerUnit": 10
  },
  "objects": [
    {
      "id": "boxA",
      "x": 15,
      "y": 50,
      "body": { "type": "rectangle", "width": 6, "height": 6, "color": "#ff6bff" },
      "velocity": { "x": 5, "y": 0 },
      "restitution": 0.8,
      "frictionAir": 0
    },
    {
      "id": "boxB",
      "x": 65,
      "y": 40,
      "body": { "type": "rectangle", "width": 6, "height": 6, "color": "#4ecdc4" },
      "velocity": { "x": -5, "y": 0 },
      "restitution": 0.8,
      "frictionAir": 0
    }
  ],
  "controls": [
    {
      "type": "slider",
      "label": "Box A Velocity",
      "targetObj": "boxA",
      "property": "velocity.x",
      "min": -30,
      "max": 30,
      "step": 0.1,
      "defaultValue": 5
    },
    {
      "type": "slider",
      "label": "Box B Velocity",
      "targetObj": "boxB",
      "property": "velocity.x",
      "min": -30,
      "max": 30,
      "step": 0.1,
      "defaultValue": -5
    }
  ],
  "outputs": [
    {
      "title": "Box A Outputs",
      "values": [
        {
          "label": "Velocity X",
          "targetObj": "boxA",
          "property": "velocity.x",
          "unit": "m/s"
        },
        {
          "label": "Velocity Y",
          "targetObj": "boxA",
          "property": "velocity.y",
          "unit": "m/s"
        }
      ]
    },
    {
      "title": "Box B Outputs",
      "values": [
        {
          "label": "Velocity X",
          "targetObj": "boxB",
          "property": "velocity.x",
          "unit": "m/s"
        },
        {
          "label": "Velocity Y",
          "targetObj": "boxB",
          "property": "velocity.y",
          "unit": "m/s"
        }
      ]
    }
  ],
  "graphs": [
    {
      "type": "line",
      "title": "Horizontal Velocity Over Time",
      "yAxisRange": { "min": -1, "max": 1 },
      "yAxisLabel": "Velocity (m/s)",
      "lines": [
        {
          "label": "Box A Velocity X",
          "targetObj": "boxA",
          "property": "velocity.x",
          "color": "#ff6bff"
        },
        {
          "label": "Box B Velocity X",
          "targetObj": "boxB",
          "property": "velocity.x",
          "color": "#4ecdc4"
        }
      ]
    }
  ]
}
