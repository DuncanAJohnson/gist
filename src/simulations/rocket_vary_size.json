{
  "title": "Rocket Thrust",
  "description": "Control the rocket's thrust force and observe how force affects acceleration and velocity",
  "environment": {
    "walls": ["left", "right", "bottom"],
    "gravity": 0.001
  },
  "objects": [
    {
      "id": "rocket",
      "shape": "rectangle",
      "x": 400,
      "y": 500,
      "width": 40,
      "height": 80,
      "color": "#ff6b6b",
      "velocity": {
        "x": 0,
        "y": 0
      },
      "force": {
        "x": 0,
        "y": -0.0015
      },
      "forceMode": "continuous",
      "restitution": 0.3,
      "frictionAir": 0.01
    }
  ],
  "controls": [     
    {
      "type": "slider",
      "label": "Width",
      "targetObj": "rocket",
      "property": "width",
      "min": 5,
      "max": 100,
      "step": 0.1,
      "defaultValue": 40
    },
    
    {
      "type": "slider",
      "label": "Thrust Force (Upward)",
      "targetObj": "rocket",
      "property": "force.y",
      "min": -0.002,
      "max": 0,
      "step": 0.0001,
      "defaultValue": -0.0015
    },
    {
      "type": "slider",
      "label": "Horizontal Force",
      "targetObj": "rocket",
      "property": "force.x",
      "min": -0.001,
      "max": 0.001,
      "step": 0.0001,
      "defaultValue": 0
    }
  ],
  "outputs": [
    {
      "title": "Rocket Outputs",
      "values": [
        {
          "label": "Velocity Y",
          "targetObj": "rocket",
          "property": "velocity.y",
          "unit": "px/s"
        },
        {
          "label": "Velocity X",
          "targetObj": "rocket",
          "property": "velocity.x",
          "unit": "px/s"
        },
        {
          "label": "Acceleration Y",
          "targetObj": "rocket",
          "property": "acceleration.y",
          "unit": "px/s²"
        },
        {
          "label": "Acceleration X",
          "targetObj": "rocket",
          "property": "acceleration.x",
          "unit": "px/s²"
        }
      ]
    }
  ],
  "graphs": [
    {
      "title": "Vertical Motion Over Time",
      "yAxisRange": {
        "min": -30,
        "max": 30
      },
      "lines": [
        {
          "label": "Velocity Y",
          "targetObj": "rocket",
          "property": "velocity.y",
          "color": "#ff6b6b"
        },
        {
          "label": "Acceleration Y",
          "targetObj": "rocket",
          "property": "acceleration.y",
          "color": "#4ecdc4"
        }
      ]
    },
    {
      "title": "Horizontal Motion Over Time",
      "yAxisRange": {
        "min": -20,
        "max": 20
      },
      "lines": [
        {
          "label": "Velocity X",
          "targetObj": "rocket",
          "property": "velocity.x",
          "color": "#95e1d3"
        },
        {
          "label": "Acceleration X",
          "targetObj": "rocket",
          "property": "acceleration.x",
          "color": "#ffa07a"
        }
      ]
    }
  ]
}